        <!--linear layout for botton icons (End)-->

        <!--relative layout for select image from ic_camera_click or gallery (Start)-->
        <RelativeLayout
            android:id="@+id/rl_bgcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#806bcbff"
            android:visibility="gone"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:padding="1dp">

                <!--relative layout for ic_camera_click image (Start)-->
                <RelativeLayout
                    android:id="@+id/top_holder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boarderorange"
                    android:gravity="center"
                    android:onClick="startCamera"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/camera_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="Images"
                        android:src="@drawable/ic_device_access_cameraa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/camera_icon"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Image"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>
                <!--relative layout for ic_camera_click image (End)-->

                <!--relative layout for gallery image (Start)-->
                <RelativeLayout
                    android:id="@+id/bottom_holder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boarderblue"
                    android:gravity="center"
                    android:onClick="startGallery">

                    <ImageView
                        android:id="@+id/gallery_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="video"
                        android:src="@drawable/ic_galler" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gallery_icon"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Gallery"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RelativeLayout>
                <!--relative layout for gallery image (End)-->

            </LinearLayout>

            <!--relative layout for middle OR (Start)-->
            <RelativeLayout
                android:id="@+id/step_number"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_step">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="OR"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <!--relative layout for middle OR (End)-->
        </RelativeLayout>
        <!--relative layout for select image from ic_camera_click or gallery (End)-->

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="82dp"
            android:text="Share Via"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />
