<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/setbgselectedimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_main_bg">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@drawable/btn_border_login_signup"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/textcolor" />

        <!-- BOTTOM linear layout for Social icons on main screen (Start)-->
        <LinearLayout
            android:id="@+id/ll_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#80282626"
            android:orientation="horizontal"
            android:weightSum="5">

            <!--relative layout for ic_camera_click click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_cameraclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_cameraclick"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_camera" />


                <io.netopen.hotbitmapgg.library.view.RingProgressBar
                    android:id="@+id/iv_cameraclicklong"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    app:max="100"
                    app:ringColor="@color/colorPrimary"
                    app:ringProgressColor="@color/colorPrimaryDark"
                    app:ringWidth="3dp"
                    app:style="FILL"
                    app:textColor="@color/colorPrimary"
                    app:textIsShow="true"
                    app:textSize="16sp" />


            </RelativeLayout>
            <!--relative layout for ic_camera_click click (End)-->

            <!--relative layout for facebook click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_fbclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_fb" />

            </RelativeLayout>
            <!--relative layout for facebook click (End)-->

            <!--relative layout for instagram click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_instagramclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_instagram"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_instagram" />

            </RelativeLayout>
            <!--relative layout for instagram click (End)-->

            <!--relative layout for twitter  click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_twitterclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_twitter" />

            </RelativeLayout>
            <!--relative layout for twitter click (End)-->

            <!--relative layout for snapchat click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_snapchatclick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_snapchat"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_snapchat" />

            </RelativeLayout>
            <!--relative layout for snapchat click (End)-->

        </LinearLayout>
        <!-- BOTTOM linear layout for Social icons on main screen (End)-->

        <!-- BOTTOM linear layout for Social icons after taking image (Start)-->
        <LinearLayout
            android:id="@+id/ll_bottomshet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#80282626"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="4">

            <!--relative layout for facebook click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_fb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_fbc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_fb" />

            </RelativeLayout>
            <!--relative layout for facebook click (End)-->

            <!--relative layout for instagram click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_instagram"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_instagramc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_instagram" />

            </RelativeLayout>
            <!--relative layout for instagram click (End)-->

            <!--relative layout for twitter click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_twitter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_twitterc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_twitter" />

            </RelativeLayout>
            <!--relative layout for twitter click (End)-->

            <!--relative layout for snapchat click (Start)-->
            <RelativeLayout
                android:id="@+id/rl_snapchat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_snapchatc"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:background="@drawable/ic_snapchat" />

            </RelativeLayout>
            <!--relative layout for snapchat click (End)-->

        </LinearLayout>
